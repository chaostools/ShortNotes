<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.work.chaostools.ShortNotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.work.chaostools.ShortNotes.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.work.chaostools.ShortNotes.NoteActivity"
            android:parentActivityName="com.work.chaostools.ShortNotes.MainActivity" />



        <activity android:name="com.work.chaostools.ShortNotes.SettingsActivity"

            android:parentActivityName="com.work.chaostools.ShortNotes.MainActivity"/>


        <activity android:name="com.work.chaostools.ShortNotes.AboutActivity"
            android:parentActivityName="com.work.chaostools.ShortNotes.MainActivity"></activity>

    </application>

</manifest>